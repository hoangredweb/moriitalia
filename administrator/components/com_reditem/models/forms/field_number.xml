<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="params">
		<field
			name="number_decimal_sepatator"
			type="text"
			label="COM_REDITEM_FIELD_CONFIGURATION_NUMBER_DECIMAL_SEPATATOR"
			default="." />
		<field
			name="number_thousand_separator"
			type="text"
			label="COM_REDITEM_FIELD_CONFIGURATION_NUMBER_THOUSAND_SEPATATOR"
			default="," />
		<field
			name="number_number_decimals"
			type="text"
			validate="integer"
			label="COM_REDITEM_FIELD_CONFIGURATION_NUMBER_NUMBER_DECIMALS"
			default="2" />
		<field
			name="enable_tooltip"
			type="radio"
			class="btn-group"
			default="1"
			label="COM_REDITEM_FIELD_CONFIGURATION_ENABLE_TOOLTIP"
			description="COM_REDITEM_FIELD_CONFIGURATION_ENABLE_TOOLTIP_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
		</field>
		<field
			name="tooltip"
			type="text"
			label="COM_REDITEM_FIELD_CONFIGURATION_TOOLTIP"
			description="COM_REDITEM_FIELD_CONFIGURATION_TOOLTIP_DESC" />
        <field
			name="default"
			type="text"
			label="COM_REDITEM_FIELD_DEFAULT"
			desc="COM_REDITEM_FIELD_DEFAULT_DESC" />
		<field
			name="required"
			type="radio"
			class="btn-group"
			label="COM_REDITEM_FIELD_CONFIGURATION_REQUIRED"
			description="COM_REDITEM_FIELD_CONFIGURATION_REQUIRED_DESCRIPTION"
            default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
    </fields>
</form>