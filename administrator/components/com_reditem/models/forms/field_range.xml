<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="params">
		<field
			name="min"
			type="text"
			validate="integer"
			required="true"
			label="COM_REDITEM_FIELD_CONFIGURATION_RANGE_MIN" />

		<field
			name="max"
			type="text"
			validate="integer"
			required="true"
			label="COM_REDITEM_FIELD_CONFIGURATION_RANGE_MAX" />

		<field
			name="default"
			type="text"
			validate="integer"
			label="COM_REDITEM_FIELD_CONFIGURATION_RANGE_DEFAULT" />

		<field
			name="step"
			type="text"
			validate="integer"
			required="true"
			default="1"
			label="COM_REDITEM_FIELD_CONFIGURATION_RANGE_STEP" />

		<field
			name="tooltipText"
			type="text"
			label="COM_REDITEM_FIELD_CONFIGURATION_RANGE_TOOLTIP_TEXT" />

		<field
			name="tooltipDisplay"
			type="radio"
			class="btn-group"
			label="COM_REDITEM_FIELD_CONFIGURATION_RANGE_TOOLTIP_DISPLAY_TYPE"
			default="">
			<option value="">COM_REDITEM_FIELD_CONFIGURATION_RANGE_TOOLTIP_DISPLAY_TYPE_OPTION_HOVER</option>
			<option value="always">COM_REDITEM_FIELD_CONFIGURATION_RANGE_TOOLTIP_DISPLAY_TYPE_OPTION_ALWAYS</option>
		</field>

		<field
			name="pointStyle"
			type="radio"
			class="btn-group"
			label="COM_REDITEM_FIELD_CONFIGURATION_RANGE_POINT_STYLE"
			default="round">
			<option value="round">COM_REDITEM_FIELD_CONFIGURATION_RANGE_POINT_STYLE_OPTION_ROUND</option>
			<option value="square">COM_REDITEM_FIELD_CONFIGURATION_RANGE_POINT_STYLE_OPTION_SQAURE</option>
			<option value="triangle">COM_REDITEM_FIELD_CONFIGURATION_RANGE_POINT_STYLE_OPTION_TRIANGLE</option>
		</field>

		<field
			name="backgroundColor"
			type="Rcolor"
			label="COM_REDITEM_FIELD_CONFIGURATION_RANGE_SLIDER_BACKGROUND_COLOR"
			default="#f5f5f5" />

		<field
			name="selectionColor"
			type="Rcolor"
			label="COM_REDITEM_FIELD_CONFIGURATION_RANGE_SLIDER_SELECTION_COLOR"
			default="#da4f49" />

		<field
			name="sliderOrientation"
			type="radio"
			class="btn-group"
			label="COM_REDITEM_FIELD_CONFIGURATION_RANGE_SLIDER_ORIENTATION"
			default="">
			<option value="">COM_REDITEM_FIELD_CONFIGURATION_RANGE_SLIDER_ORIENTATION_OPTION_HORIZONTAL</option>
			<option value="vertical">COM_REDITEM_FIELD_CONFIGURATION_RANGE_SLIDER_ORIENTATION_OPTION_VERTICAL</option>
		</field>
		<field name="enable_tooltip"
			type="radio"
			class="btn-group"
			default="1"
			label="COM_REDITEM_FIELD_CONFIGURATION_ENABLE_TOOLTIP"
			description="COM_REDITEM_FIELD_CONFIGURATION_ENABLE_TOOLTIP_DESC"
			>
            <option value="1">JYES</option>
            <option value="0">JNO</option>
		</field>
		<field name="tooltip"
			type="text"
			label="COM_REDITEM_FIELD_CONFIGURATION_TOOLTIP"
			description="COM_REDITEM_FIELD_CONFIGURATION_TOOLTIP_DESC"
			/>
		<field name="required"
			type="radio"
			class="btn-group"
			label="COM_REDITEM_FIELD_CONFIGURATION_REQUIRED"
			description="COM_REDITEM_FIELD_CONFIGURATION_REQUIRED_DESCRIPTION"
            default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
		</field>
	</fields>
</form>