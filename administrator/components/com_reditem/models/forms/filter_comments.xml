<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_REDCORE_FILTER_SEARCH_DESC"
			placeholder="JSEARCH_FILTER"
			class="js-enter-submits"
			/>
		<field
			name="state"
			type="list"
			onchange="this.form.submit();"
			label="COM_REDITEM_FILTER_PUBLISHED">
			<option value="">COM_REDITEM_FILTER_PUBLISHED</option>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">COM_REDITEM_COMMENTS_FILTER_PUBLISHED_DELETE_BY_USER</option>
			<option value="3">COM_REDITEM_COMMENTS_FILTER_PUBLISHED_DELETE_DUE_TO_REPORT</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="comments_limit"
			type="rlimitbox"
			class="inputbox input-mini chzn"
			default="25"
			label="JGLOBAL_ORDERING_LIST_LIMIT"
			description="JGLOBAL_ORDERING_LIST_LIMIT_DESC"
			onchange="this.form.submit();" />
	</fields>
</form>