<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_REDCORE_FILTER_SEARCH_DESC"
			placeholder="JSEARCH_FILTER"
			class="js-enter-submits" />
		<field
			name="subscrible"
			type="list"
			onchange="this.form.submit();"
			label="COM_REDITEM_SUBSCRIBLERS_FILTER_SUBSCRIBLE"
			default="">
			<option value="">COM_REDITEM_SUBSCRIBLERS_FILTER_SUBSCRIBLE_OPTION_SELECT</option>
			<option value="0">COM_REDITEM_SUBSCRIBLERS_FILTER_SUBSCRIBLE_OPTION_UNSUBSCRIBLE</option>
			<option value="1">COM_REDITEM_SUBSCRIBLERS_FILTER_SUBSCRIBLE_OPTION_SUBSCRIBLE</option>
		</field>
		<field
			name="notify"
			type="list"
			onchange="this.form.submit();"
			label="COM_REDITEM_SUBSCRIBLERS_FILTER_NOTIFY"
			default="">
			<option value="">COM_REDITEM_SUBSCRIBLERS_FILTER_NOTIFY_OPTION_SELECT</option>
			<option value="0">COM_REDITEM_SUBSCRIBLERS_FILTER_NOTIFY_OPTION_EVENT</option>
			<option value="1">COM_REDITEM_SUBSCRIBLERS_FILTER_NOTIFY_OPTION_DAILY</option>
			<option value="2">COM_REDITEM_SUBSCRIBLERS_FILTER_NOTIFY_OPTION_WEEKLY</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="subscriblers_limit"
			type="rlimitbox"
			class="inputbox input-mini chzn"
			default="25"
			label="JGLOBAL_ORDERING_LIST_LIMIT"
			description="JGLOBAL_ORDERING_LIST_LIMIT_DESC"
			onchange="this.form.submit();" />
	</fields>
</form>