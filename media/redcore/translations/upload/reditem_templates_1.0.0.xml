  <description>Templates Table Definition for the RedITEM extension</description>
  <reference>
    <table name="reditem_templates">
      <field name="id" type="referenceid" translate="0" alwaysFallback="false" filter="RAW" description="">ID</field>
      <field name="name" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Template Name</field>
      <field name="description" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Template Content</field>
      <filter><![CDATA[]]></filter>
    </table>
    <component>
      <editForm admin="false" option="com_reditem" view="template" layout="edit" identifier="cid" showbutton="true" htmlposition=".btn-toolbar:first" checkoriginalid="false"/>
    </component>
  </reference>
