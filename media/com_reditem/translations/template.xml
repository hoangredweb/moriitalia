<?xml version="1.0"?>
<contentelement type="contentelement">
	<name>RedITEM Template</name>
	<author>redCOMPONENT</author>
	<copyright>Copyright (C) 2008 - 2016 redCOMPONENT.com. All rights reserved.</copyright>
	<version>1.8.6</version>
	<description>Templates Table Definition for the RedITEM extension</description>
	<reference>
		<table name="reditem_templates">
			<field name="id" type="referenceid" translate="0" alwaysFallback="false" filter="RAW" description="">ID</field>
			<field name="name" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Template Name</field>
			<field name="filename" type="text" translate="1" alwaysFallback="false" filter="RAW" description="Relative file path to the template file">Template Filename</field>
			<filter><![CDATA[]]></filter>
		</table>
		<component>
			<editForm admin="true" option="com_reditem" view="template" layout="edit" identifier="id" showbutton="true" htmlposition=".btn-toolbar:first .btn-group:first" checkoriginalid="false"/>
		</component>
	</reference>
</contentelement>
