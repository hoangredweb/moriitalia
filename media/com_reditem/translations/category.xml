<?xml version="1.0"?>
<contentelement type="contentelement">
	<name>RedITEM Category</name>
	<author>redCOMPONENT</author>
	<copyright>Copyright (C) 2008 - 2016 redCOMPONENT.com. All rights reserved.</copyright>
	<version>1.8.6</version>
	<description>Categories Table Definition for the RedITEM extension</description>
	<reference>
		<table name="reditem_categories">
			<field name="id" type="referenceid" translate="0" alwaysFallback="false" filter="RAW" description="">ID</field>
			<field name="title" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Category Name</field>
			<field name="introtext" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Category Introtext</field>
			<field name="fulltext" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Category Fulltext</field>
			<filter><![CDATA[]]></filter>
		</table>
		<component>
			<editForm admin="true" option="com_reditem" view="category" layout="edit" identifier="id" showbutton="true" htmlposition=".btn-toolbar:first .btn-group:first" checkoriginalid="false"/>
		</component>
	</reference>
</contentelement>
