<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="item-information">
		<field
			name="id"
			type="hidden"
			default="0"
			class="readonly"
			readonly="true"
			/>

		<field name="type_id"
			type="ritypelist"
			label="COM_REDITEM_ITEM_TYPE"
			required="true"
			description=""
			onchange="submitform('item.setType');"
			>
			<option value="">COM_REDITEM_SELECT</option>
		</field>

		<field
			name="title"
			type="text"
			default=""
			label="COM_REDITEM_ITEM_NAME"
			description="COM_REDITEM_ITEM_NAME"
			required="true"
		/>

		<field
			name="alias"
			type="text"
			default=""
			label="COM_REDITEM_ITEM_ALIAS"
			description="COM_REDITEM_ITEM_ALIAS_DESC"
		/>

		<field
			name="categories"
			type="ricategoriestree"
			class="input-xlarge"
			label="COM_REDITEM_ITEM_CATEGORY"
			description="COM_REDITEM_ITEM_CATEGORY"
			multiple="true"
			>
		</field>

		<field
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="inputbox"
			size="1"
		/>

		<field
			name="template_id"
			type="redtemplate"
			section="view_itemdetail"
			label="COM_REDITEM_ITEM_TEMPLATE"
			description="COM_REDITEM_ITEM_TEMPLATE_DESCRIPTION"
			required="true"
			>
			<option value="">COM_REDITEM_SELECT</option>
		</field>

		<field
			name="featured"
			type="radio"
			label="JFEATURED"
			class="btn-group"
			default="0">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="published"
			type="radio"
			label="JPUBLISHED"
			class="btn-group"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
		</field>

		<field name="publish_up" type="calendar"
			label="COM_REDITEM_ITEM_PUBLISH_UP" 
			description="COM_REDITEM_ITEM_PUBLISH_UP_DESC"
			format="%Y-%m-%d %H:%M:%S" 
			size="22"
			filter="user_utc" />

		<field name="publish_down" type="calendar"
			label="COM_REDITEM_ITEM_PUBLISH_DOWN" 
			description="COM_REDITEM_ITEM_PUBLISH_DOWN_DESC"
			format="%Y-%m-%d %H:%M:%S" 
			size="22"
			filter="user_utc" />
	</fieldset>
	<fields name="params">
		<field
			name="related_items"
			label="COM_REDITEM_ITEM_RELATED_ITEMS"
			type="RedItemList"
			multiple="true" />
		<field
			name="meta_description"
			label="COM_REDITEM_ITEM_META_DESCRIPTION"
			type="textarea" />
		<field
			name="meta_keywords"
			label="COM_REDITEM_ITEM_META_KEYWORDS"
			type="textarea" />
		<field
			name="meta_robots"
			label="COM_REDITEM_ITEM_META_ROBOTS"
			type="list"
			default="">
			<option value="">JGLOBAL_USE_GLOBAL</option>
			<option value="index, follow">JGLOBAL_INDEX_FOLLOW</option>
			<option value="noindex, follow">JGLOBAL_NOINDEX_FOLLOW</option>
			<option value="index, nofollow">JGLOBAL_INDEX_NOFOLLOW</option>
			<option value="noindex, nofollow">JGLOBAL_NOINDEX_NOFOLLOW</option>
		</field>
	</fields>
</form>